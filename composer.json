{
  "name": "arvici/framework",
  "type": "library",
  "description": "Arvici Framework",
  "keywords": ["framework", "arvici", "smart", "simple"],
  "homepage": "https://github.com/arvici/framework",
  "license": "MIT",
  "authors": [
    {
      "name": "Tom Valk",
      "email": "tomvalk@lt-box.info",
      "role": "Developer"
    }
  ],
  "minimum-stability": "stable",
  "prefer-stable": true,
  "require": {
    "php": ">=5.6.0",
    "ext-mbstring": "*",

    "psr/log": "~1.0",
    "monolog/monolog": "~1.17",
    "filp/whoops": "~2.0",

    "mustache/mustache": "~2.9",

    "doctrine/annotations": "~1.2",
    "swiftmailer/swiftmailer": "~5.4",

    "fabfuel/prophiler": "~1.0",
    "symfony/var-dumper": "~3.0"
  },
  "require-dev": {
    "phpunit/phpunit": "5.1.4",
    "phpunit/php-code-coverage": "^3",
    "satooshi/php-coveralls": "^1.0",
    "codacy/coverage": "^1.0"
  },
  "autoload": {
    "psr-4": {
      "Arvici\\": "src/Arvici"
    },
    "files": [
      "src/Arvici/Heart/Log/Logger.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "App\\": "tests/app/App",
      "Arvici\\Tests\\": "tests/src"
    }
  },
  "archive": {
    "exclude": [
      "!vendor",
      "tests",
      "*phpunit.xml",
      ".travis.yml",
      ".coveralls.yml",
      "composer.phar"
    ]
  }
}